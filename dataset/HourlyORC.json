{
	"name": "HourlyORC",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AzureStorageLinkedService",
			"type": "LinkedServiceReference"
		},
		"annotations": [],
		"type": "AzureBlob",
		"typeProperties": {
			"format": {
				"type": "JsonFormat",
				"filePattern": "setOfObjects"
			},
			"fileName": {
				"value": "@{concat(formatDateTime(utcnow(), 'HH'), '.json')}",
				"type": "Expression"
			},
			"folderPath": {
				"value": "data-lake/@formatDateTime(utcnow(), 'yyyy/MM/dd')",
				"type": "Expression"
			}
		}
	}
}